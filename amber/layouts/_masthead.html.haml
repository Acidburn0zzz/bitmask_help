.container
  .row
    .col-sm-12
      .masthead-inner
        .text.top
          %span= t :banner_top
        .text.bottom
          %span= t(:banner_motto).gsub('<br>', '&nbsp;<br>&nbsp;')
        %ul.list-unstyled#top-menu
          - top_navigation_items(include_home:true) do |item|
            %li{:class => item[:class]}
              %a{:href => item[:href], :class => item[:class]}= item[:label]